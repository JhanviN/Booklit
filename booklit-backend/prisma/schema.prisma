generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Experience {
  id          Int       @id @default(autoincrement())
  title       String
  location    String
  description String
  price       Float
  image       String
  slots       Slot[]
  createdAt   DateTime  @default(now())
  bookings    Booking[]
}

model Slot {
  id           Int        @id @default(autoincrement())
  date         DateTime
  time         String
  capacity     Int
  bookedCount  Int        @default(0)
  experience   Experience @relation(fields: [experienceId], references: [id])
  experienceId Int
  bookings     Booking[]
}

model Booking {
  id           Int        @id @default(autoincrement())
  name         String
  email        String
  experienceId Int
  slotId       Int
  promoCode    String?
  finalPrice   Float
  status       String     @default("CONFIRMED")
  createdAt    DateTime   @default(now())
  experience   Experience @relation(fields: [experienceId], references: [id])
  slot         Slot       @relation(fields: [slotId], references: [id])
}

model Promo {
  id           Int      @id @default(autoincrement())
  code         String   @unique
  discountType String // 'PERCENT' or 'FLAT'
  value        Float
  expiry       DateTime
}
